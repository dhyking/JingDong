<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
<TextView
    android:text="category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scroll_category"
            android:scrollbars="none"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <com.jszf.jingdong.market.custom.view.ListForScrollView
                android:layout_width="match_parent"
                android:id="@+id/vertical_listView"
                android:divider="@null"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:layout_height="match_parent"></com.jszf.jingdong.market.custom.view.ListForScrollView>
        </ScrollView>

        <GridView
            android:layout_toRightOf="@id/scroll_category"
            android:id="@+id/grid_category"
            android:divider="@null"
            android:fadingEdge="none"
            android:numColumns="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></GridView>
    </RelativeLayout>
    <ProgressBar
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progressbar_loading_category"
        android:id="@+id/progress_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
